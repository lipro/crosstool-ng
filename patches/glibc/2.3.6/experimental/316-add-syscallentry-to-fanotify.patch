 sysdeps/unix/sysv/linux/Makefile       |    2 +-
 sysdeps/unix/sysv/linux/Versions       |    1 +
 sysdeps/unix/sysv/linux/sys/fanotify.h |   39 ++++++++++++++++++++++++++++++++
 sysdeps/unix/sysv/linux/syscalls.list  |    2 +
 4 files changed, 43 insertions(+), 1 deletions(-)
 create mode 100644 sysdeps/unix/sysv/linux/sys/fanotify.h

diff --git a/sysdeps/unix/sysv/linux/Makefile b/sysdeps/unix/sysv/linux/Makefile
index 5d53eb0..468ec3b 100644
--- a/sysdeps/unix/sysv/linux/Makefile
+++ b/sysdeps/unix/sysv/linux/Makefile
@@ -26,7 +26,7 @@ sysdep_headers += sys/mount.h sys/acct.h sys/sysctl.h \
 		  scsi/sg.h scsi/scsi.h scsi/scsi_ioctl.h sys/pci.h \
 		  sys/ultrasound.h sys/raw.h sys/personality.h sys/epoll.h \
 		  bits/a.out.h sys/inotify.h sys/signalfd.h sys/eventfd.h \
-		  sys/timerfd.h
+		  sys/timerfd.h sys/fanotify.h
 
 install-others += $(inst_includedir)/bits/syscall.h
 
diff --git a/sysdeps/unix/sysv/linux/Versions b/sysdeps/unix/sysv/linux/Versions
index f1a5761..f8f24cd 100644
--- a/sysdeps/unix/sysv/linux/Versions
+++ b/sysdeps/unix/sysv/linux/Versions
@@ -119,6 +119,7 @@ libc {
     # New kernel interfaces.
     epoll_create1; epoll_pwait;
     eventfd; eventfd_read; eventfd_write;
+    fanotify_init; fanotify_mark;
     inotify_init; inotify_init1; inotify_add_watch; inotify_rm_watch;
     signalfd;
     timerfd_create; timerfd_settime; timerfd_gettime;
diff --git a/sysdeps/unix/sysv/linux/sys/fanotify.h b/sysdeps/unix/sysv/linux/sys/fanotify.h
