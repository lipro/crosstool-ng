    bool
    prompt "4.0.2 (OBSOLETE)"
    depends on OBSOLETE

config CC_V_4_0_3
    bool
    prompt "4.0.3 (OBSOLETE)"
    depends on OBSOLETE

config CC_V_4_0_4
    bool
    prompt "4.0.4"

config CC_V_4_1_0
    bool
    prompt "4.1.0 (OBSOLETE)"
    depends on OBSOLETE

config CC_V_4_1_1
    bool
    prompt "4.1.1 (OBSOLETE)"
    depends on OBSOLETE

